<Window x:Class="MonopolyEntity.Windows.CustomMessageBoxWonPrize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonopolyEntity.Windows"
        mc:Ignorable="d"
        Title="CustomMessageBoxWonPrize" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Name="CongratsTextGrid" Background="LightGreen">
            <TextBlock x:Name="Congrats" Text="Success!" FontSize="21" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1" x:Name="ButtonGrid">

            <Button Width="100" Height="25" Background="LightGreen" BorderBrush="Transparent"
                    Content="Got it!" FontSize="14" Click="Button_Click"/>
        </Grid>
        
    </Grid>
</Window>
