<UserControl x:Class="MonopolyEntity.Windows.UserControls.MainPage.DescribeBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonopolyEntity.Windows.UserControls.MainPage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name ="ImageRow" Height="5*"/>
            <RowDefinition Name ="NameRow" Height="25"/>
            <RowDefinition Name ="TextRow"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Name ="ImageGrid">
            <Image Name="CardImg" Width="150" HorizontalAlignment="Left">

            </Image>
        </Grid>

        <Grid Grid.Row="1" Name="NameGrid" >
            <TextBlock Name="NameText" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold"/>
        </Grid>
        <TextBlock Name ="DescribeText" Grid.Row="2"/>

    </Grid>
</UserControl>
