<UserControl x:Class="MonopolyEntity.Windows.UserControls.CaseOpening.CaseRoulette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonopolyEntity.Windows.UserControls.CaseOpening"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="1050"
             
             xmlns:Card="clr-namespace:MonopolyEntity.Windows.UserControls">
    <Grid>
        
        <Grid Name="CaseView" Width="350" HorizontalAlignment="Left" Height="250">
            <StackPanel Name="CaseRotator" Orientation="Horizontal" Margin="0 10 0 0"
                        Width="{Binding ActualWidth, ElementName=CaseView}"
                        Height="{Binding ActualHeight, ElementName=CaseView}">
              
                
            </StackPanel>

            <Line Name="ChoseLine" X1="175" Y1="10" X2="175" Y2="250" Stroke="Black" StrokeThickness="5"/> 

        </Grid>
    </Grid>
</UserControl>
