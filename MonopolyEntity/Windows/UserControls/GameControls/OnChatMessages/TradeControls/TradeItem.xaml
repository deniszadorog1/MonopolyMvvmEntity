<UserControl x:Class="MonopolyEntity.Windows.UserControls.GameControls.OnChatMessages.TradeControls.TradeItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonopolyEntity.Windows.UserControls.GameControls.OnChatMessages.TradeControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250">
    <Grid Background="#E3E3E3">
        <WrapPanel VerticalAlignment="Center">
            
            <Image Name ="Itemimg" Width="45" Height="45" Margin="5 0 0 0"/>

            <Grid Width="175"  Margin="10 0 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Name ="ItemName" VerticalAlignment="Center"
                               Text = "There should be item name!"
                               FontSize="14"/>
                </Grid>

                <Grid Grid.Row="1">
                    <TextBlock  Name="ItemType" VerticalAlignment="Top" FontSize="12"
                                Foreground="#696969" Text="There should be item type"/>
                </Grid>
            </Grid>
            
        </WrapPanel>
    </Grid>
</UserControl>
