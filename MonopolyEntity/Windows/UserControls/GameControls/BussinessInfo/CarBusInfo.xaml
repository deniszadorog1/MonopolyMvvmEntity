<UserControl x:Class="MonopolyEntity.Windows.UserControls.GameControls.BussinessInfo.CarBusInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonopolyEntity.Windows.UserControls.GameControls.BussinessInfo"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="260"
             MaxHeight="350" MinHeight="350"
             MaxWidth="260" MinWidth="260">
             
    
    <Border Background="White" CornerRadius="10">
        <Grid Name ="CardGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Name="CarBusHeader"
                    Background="Gray" CornerRadius="10 10 0 0">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Name ="BusNameText" Foreground="White" 
                               FontSize="18" Text="There should be bus name"/>
                    <TextBlock Grid.Row="1" Name="BusType" Foreground="White" 
                               FontSize="14" Text="There should be bus type"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="10 5 10 5">
                <TextBlock Name ="BusDesc" TextWrapping="Wrap" 
                           Text="There should be bus desc" FontSize="14"/>

                <Button Name ="RebuyBut" Width="200" Height="30" Visibility="Hidden"
                Background="{StaticResource MainGlobalColor}" 
                BorderBrush="White" VerticalAlignment="Center"
                HorizontalAlignment="Center" Content="Rebuy business"
                Foreground="White" VerticalContentAlignment="Top"
                HorizontalContentAlignment="Center" FontSize="14"/>

                <Button Name ="DepositBut" Width="200" Height="30" Visibility="Hidden"
                Background="{StaticResource DenyGlobalColor}" 
                BorderBrush="White" VerticalAlignment="Center"
                HorizontalAlignment="Center" Content="Deposit business"
                Foreground="White" VerticalContentAlignment="Top"
                HorizontalContentAlignment="Center" FontSize="14"/>
            </Grid>

            <Grid Grid.Row="2" Margin="10 5 20 0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock VerticalAlignment="Center" Text="One field - "   
                               HorizontalAlignment="Left" FontSize="16"/>
                    <TextBlock Name ="OneFieldMoney" Text="xxxxK" 
                               HorizontalAlignment="Right" FontSize="16"
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="1">
                    <TextBlock VerticalAlignment="Center" Text="Two field - "   
                               HorizontalAlignment="Left" FontSize="16"/>
                    <TextBlock Name ="TwoFieldMoney" Text="xxxxK" 
                               HorizontalAlignment="Right" FontSize="16"
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="2">
                    <TextBlock VerticalAlignment="Center" Text="Three field - "   
                               HorizontalAlignment="Left" FontSize="16"/>
                    <TextBlock Name ="ThreeFieldMoney" Text="xxxxK" 
                               HorizontalAlignment="Right" FontSize="16"
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="3">
                    <TextBlock VerticalAlignment="Center" Text="Four field - "   
                               HorizontalAlignment="Left" FontSize="16"/>
                    <TextBlock Name ="FourFieldMoney" Text="xxxxK" 
                               HorizontalAlignment="Right" FontSize="16"
                               VerticalAlignment="Center"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="3" Margin="10 15 20 5">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <TextBlock VerticalAlignment="Center" Text="Field price - "   
                               HorizontalAlignment="Left" FontSize="16"/>
                    <TextBlock Name ="FieldPrice" Text="xxxxK" 
                               HorizontalAlignment="Right" FontSize="16"
                               VerticalAlignment="Center"/>
                </Grid>  
                
                <Grid Grid.Row="1">
                    <TextBlock VerticalAlignment="Center" Text="Deposit price - "   
                               HorizontalAlignment="Left" FontSize="16"/>
                    <TextBlock Name ="DepositPriceText" Text="xxxxK" 
                               HorizontalAlignment="Right" FontSize="16"
                               VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="2">
                    <TextBlock VerticalAlignment="Center" Text="Rebuy price - "   
                               HorizontalAlignment="Left" FontSize="16"/>
                    <TextBlock Name ="RebuyPrice" Text="xxxxK" 
                               HorizontalAlignment="Right" FontSize="16"
                               VerticalAlignment="Center"/>
                </Grid>

            </Grid>
            
        </Grid>    
    </Border>
</UserControl>
