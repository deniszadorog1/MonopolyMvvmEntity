<UserControl x:Class="MonopolyEntity.Windows.UserControls.GameControls.BussinessInfo.GameBusInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonopolyEntity.Windows.UserControls.GameControls.BussinessInfo"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="260" MaxWidth="260">
    <Border CornerRadius="10" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="10 10 0 0" Background="Gray">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Name="BusName" Margin="5" 
                               Foreground="White" 
                               Text="There should bus name" FontSize="18"/>

                    <TextBlock Grid.Row="1" Name="BusDescription" Margin="5" 
                               Foreground="White" 
                               Text="There should bus type" FontSize="14"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="10 5 20 5">
                <TextBlock Text="There should be bus type description" 
                           FontSize="16" TextWrapping="Wrap"/>
            </Grid>

            <Grid Grid.Row="2" Margin="10 5 20 5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock VerticalAlignment="Center" Text="One field - "   
                           HorizontalAlignment="Left" FontSize="16"/>
                    <TextBlock Name ="OneFieldMoney" Text="X xxxx" 
                           HorizontalAlignment="Right" FontSize="16"
                           VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="1">
                    <TextBlock VerticalAlignment="Center" Text="Two field - "   
                               HorizontalAlignment="Left" FontSize="16"/>
                    <TextBlock Name ="TwoFieldMoney"  Text="X xxxx" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" FontSize="16"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="3" Margin="10 15 20 5">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock VerticalAlignment="Center" Text="Field price - "   
                               HorizontalAlignment="Left" FontSize="16"/>
                    <TextBlock Name ="FieldPrice" Text="xxxxK" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" FontSize="16"/>
                </Grid>

                <Grid Grid.Row="1">
                    <TextBlock VerticalAlignment="Center" Text="Deposit price - "   
                               HorizontalAlignment="Left" FontSize="16"/>
                    <TextBlock Name ="DepositPriceText" Text="xxxxK" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" FontSize="16"/>
                </Grid>

                <Grid Grid.Row="2">
                    <TextBlock VerticalAlignment="Center" Text="Rebuy price - "   
                               HorizontalAlignment="Left" FontSize="16"/>
                    <TextBlock Name ="RebuyPrice" Text="xxxxK" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" FontSize="16"/>
                </Grid>

            </Grid>

        </Grid>
    </Border>
</UserControl>
