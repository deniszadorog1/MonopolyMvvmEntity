<Page x:Class="MonopolyEntity.Windows.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MonopolyEntity.Windows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Height="400" Width="600"
      MinHeight="400" MaxHeight="400"
      MinWidth="630" MaxWidth="630"
      Title="RegistrationPage" Background="#EDEDD6"         
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <TextBlock Grid.Row="0"
                           Name="RegistrationText" Text="Registration window"
                           FontSize="28" Margin="20 20 0 0" FontWeight="Bold"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0">

                <StackPanel Grid.Row="3" Orientation="Vertical" 
                            HorizontalAlignment="Center">

                    <Image Name="UserImg" Width="150" Height="150" Margin="5"/>

                    <Button Content="Chose image" Background="{StaticResource MainGlobalColor}"
                            BorderThickness="0" Name="ChoseImgBut" Click="ChoseImgBut_Click"
                            Width="200" Margin="0 20 0 0"/>

                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">

                <StackPanel>
                    <TextBox Grid.Row="1" Margin="10" FontSize="20" ToolTip="Login"
                         Name ="LoginBox" Foreground="Gray" Text="Login"
                         GotFocus="LoginBox_GotFocus" LostFocus="LoginBox_LostFocus"
                         materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource MainGlobalColor}"
                         materialDesign:TextFieldAssist.DecorationVisibility="Visible" CaretBrush="Black"/>

                    <TextBox Grid.Row="2" Margin="10" FontSize="20" ToolTip="Password"
                         Name ="PasswordBox" Foreground="Gray" Text="Password"
                         GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"
                         materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource MainGlobalColor}"
                         materialDesign:TextFieldAssist.DecorationVisibility="Visible" CaretBrush="Black"/>
                </StackPanel>
            </Grid>


        </Grid>

        <Button  Grid.Row="2" Name="RegBut"  Margin="25 0 25 0" 
                        Content="Register" Click="RegBut_Click" Background="{StaticResource MainGlobalColor}"
                            BorderThickness="0" />

    </Grid>
</Page>
