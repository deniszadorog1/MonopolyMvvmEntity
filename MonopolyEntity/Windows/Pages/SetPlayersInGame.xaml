<Page x:Class="MonopolyEntity.Windows.Pages.SetPlayersInGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MonopolyEntity.Windows.Pages"
      mc:Ignorable="d" 
      
      d:DesignHeight="450" d:DesignWidth="800"
      Height="500" Width="800"
      MaxWidth="900" MinWidth="800"
      MaxHeight="600" MinHeight="500"
      Background="White"
      Title="SetPlayersInGame">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Players in game" FontSize="32"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListBox Name="PlayersInGame" Margin="10" AllowDrop="True"/>
                </ScrollViewer>

                <Grid Grid.Row="2">
                    <Button Height="40" Name="RemovePlayerBut"  Margin="10"
                        Content="Remove player" FontSize="20"
                        Click="RemovePlayerBut_Click" Grid.Row="0" 
                        Background="{StaticResource MainGlobalColor}" BorderThickness="0"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" FontSize="32" VerticalAlignment="Center"
                       HorizontalAlignment="Center" TextWrapping="Wrap"
                       Text="Players that can be add"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListBox Name="PlayersThatCanBeAdd" Margin="10" AllowDrop="True"/>
                </ScrollViewer>

                <Button Grid.Row="2" VerticalAlignment="Top" Margin="10"
                    Height="40" Content="Add player in game" FontSize="20"
                    Name ="AddPlayerInGameBut" Click="AddPlayerInGameBut_Click"
                    Background="{StaticResource MainGlobalColor}" BorderThickness="0"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Name="StartGameButGrid">
            <Button Grid.Row="1" Margin="10" FontSize="20"
                        Height="40" Panel.ZIndex="10" Content="Start Game" 
                        Background="{StaticResource MainGlobalColor}" BorderThickness="0"
                        Name="StartGameBut" Click="StartGameBut_Click"/>
        </Grid>
    </Grid>
</Page>
