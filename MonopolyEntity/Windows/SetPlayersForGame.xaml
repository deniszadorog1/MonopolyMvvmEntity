<Window x:Class="MonopolyEntity.Windows.SetPlayersForGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonopolyEntity.Windows"
        mc:Ignorable="d"
        Title="SetPlayersForGame" 
        Height="450" Width="800"
        MaxWidth="800" MinWidth="800"
        MaxHeight="450" MinHeight="450"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Players in game" FontSize="32"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <ListBox Grid.Row="1" Name="PlayersInGame" Margin="10"/>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <WrapPanel Grid.Row="0" VerticalAlignment="Center"
                           HorizontalAlignment="Center" >
                    <Button Width="185" Height="40" Name="RemovePlayerBut" 
                            Content="Remove player" FontSize="20"
                            Click="RemovePlayerBut_Click"/>

                    <Button Width="185" Height="40" FontSize="20"
                            Name ="GetBackBut" Click="GetBackBut_Click"
                            Margin="10 0 0 0" Content="Back"/>
                </WrapPanel>

                <Button Grid.Row="1" Margin="10" FontSize="20"
                        Height="40" Content="Start Game"
                        Name="StartGameBut" Click="StartGameBut_Click"/>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" FontSize="32" VerticalAlignment="Center"
                       HorizontalAlignment="Center" TextWrapping="Wrap"
                       Text="Players that can be add"/>

            <ListBox Grid.Row="1" Name="PlayersThatCanBeAdd" Margin="10"/>

            <Button Grid.Row="2" VerticalAlignment="Top" Margin="10"
                    Height="40" Content="Add player in game" FontSize="20"
                    Name ="AddPlayerInGameBut" Click="AddPlayerInGameBut_Click"/>
        </Grid>
        
    </Grid>
</Window>
